{
  "expo": {
    "name": "appel-malade",
    "slug": "appel-malade",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Accès à la galerie pour choisir une photo de profil.",
          "cameraPermission": "Utiliser la caméra pour prendre une photo de profil."
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Utiliser la caméra pour prendre une photo de profil.",
        "NSPhotoLibraryUsageDescription": "Accès à la galerie pour choisir une photo de profil."
      },
      "bundleIdentifier": "com.appelmalade.yourbundle" 
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_EXTERNAL_STORAGE"
        
      ],
      "package": "com.appelmalade.yourpackage"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "assetBundlePatterns": ["**/*"]
  }
}
